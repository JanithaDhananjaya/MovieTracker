<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lk.iit.mobile.cw.moviestracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SearchMovieActivity"></activity>
        <activity android:name=".activity.FindInIMDBActivity" />
        <activity android:name=".activity.IMDBRatingsActivity" />
        <activity android:name=".activity.RatingActivity" />
        <activity android:name=".activity.UpdateMovie" />
        <activity android:name=".activity.EditMoviesList" />
        <activity android:name=".activity.FavouriteMovies" />
        <activity android:name=".activity.DisplayMovies" />
        <activity android:name=".activity.RegisterMovie" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>